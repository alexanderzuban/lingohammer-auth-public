<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="LingoHammer.UI.Modules.Information.InformationView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="clr-namespace:LingoHammer.UI.Controls"
    xmlns:local="clr-namespace:LingoHammer.UI.Modules.Information">
    <ContentView.BindingContext>
        <local:InformationViewModel />
    </ContentView.BindingContext>
    <Grid
        Padding="10,10,10,10"
        ColumnDefinitions="*"
        RowDefinitions="*, Auto, Auto">

        <WebView HorizontalOptions="Fill" VerticalOptions="StartAndExpand">
            <WebView.Source>
                <HtmlWebViewSource Html="{Binding Message}" />
            </WebView.Source>
        </WebView>

        <BoxView
            Grid.Row="1"
            Margin="0,10,0,10"
            Style="{StaticResource HorizontalSeperator}" />

        <Grid
            Grid.Row="2"
            ColumnDefinitions="*, 20, *"
            RowDefinitions="Auto">

            <Button
                Command="{Binding DeclineCommand}"
                IsVisible="{Binding HasDeclineButton}"
                Text="{Binding DeclineButtonText}" />

            <Button
                Grid.Column="2"
                Command="{Binding AcceptCommand}"
                IsVisible="{Binding HasAcceptButton}"
                Text="{Binding AcceptButtonText}" />
        </Grid>
    </Grid>
</ContentView>
